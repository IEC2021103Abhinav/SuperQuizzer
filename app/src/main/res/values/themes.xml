<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperQuizzer" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btnback</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/alternative</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/alternative</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserratlight</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!--Background Color-->
        <item name="android:background">@color/white</item>
        <!--Buttons Colors-->
        <item name="colorAccent">@color/secondary</item>
        <!--Title and Messages Color-->
        <item name="android:textColorPrimary">@color/alert</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:negativeButtonText">bold</item>
        <item name="android:positiveButtonText">bold</item>
        <item name="android:dialogTitle">bold</item>
    </style>
    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/enter_activity</item>
        <item name="android:activityOpenExitAnimation">
            @anim/exit_activity</item>
        <item name="android:activityCloseEnterAnimation">
            @anim/enter_activity</item>
        <item name="android:activityCloseExitAnimation">
            @anim/exit_activity</item>
    </style>
    <declare-styleable name="ds">
        <attr name="background_color" format="color"/>
        <attr name="text_color" format="color"/>
        <attr name="button_color" format="color"/>
    </declare-styleable>

    <!-- dark application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="background_color">#131313</item>
        <!--     Our app's background changes to black when dark mode is activated -->
        <item name="text_color">#ffff</item>
        <!--     text and button color change to white to contrast with the app's background-->
        <item name="button_color">#ffff</item>
    </style>
</resources>